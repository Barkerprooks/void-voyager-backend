{% extends "layout.j2" %}

{% block styles %}
<link rel="stylesheet" href="/static/css/dashboard.css" />
{% endblock %}

{% block body %}
<div id="user-page">
    <h2>{{ data["username"] }} <code>{{ data["id"] }}</code></h2>

    <div id="user-actions">
        <button id="create-group-button">create group</button>
        <button id="open-market-button">open market</button>
        <button id="buy-ship-button">buy ship</button>
    </div>

    <div id="user-details">
        <h4><button>[+]</button> ships</h4>
        <ol>
            {% for ship in ships %}
                <li>{{ ship }}</li>
            {% endfor %}
        </ol>
        <h4><button>[+]</button> markets</h4>
        <ol>
            {% for market in markets %}
                <li>{{ market }}</li>
            {% endfor %}
        </ol>
    </div>
</div>
{% endblock %}